
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>注册</title>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/css/animate.css" rel="stylesheet" />
    <link href="~/assets/css/checkboxes.css" rel="stylesheet" />
    <link href="~/Css/registered.css" rel="stylesheet" />
</head>
<body>
    <div class="wraper-registered" id="registered">
        <div class="registered-box">
            <div class="img-box">
                <div class="img-content">
                    <img src="./Image/logo-white.png" class="logo" alt="">
                    <p class="img-title">您身边更专业的计划专家</p>
                </div>
            </div>
            <div class="resign-content">
                <div class="input-box">
                    <p class="input-title">用户注册</p>
                    <input class="form-control" type="text" placeholder="请输入用户名" v-model="username">
                    <input class="form-control" type="password" placeholder="请输入密码" v-model="password">
                    <input class="form-control" type="password" placeholder="请确认密码" v-model="enter_password">
                    <p class="user-Occupation">请定义用户身份:</p>
                    <ul class="che-boxs">
                        <li class="che-box">
                            <span class="cutsom-checkbox-row custom-checkbox-style-row-3">
                                <input id="SMT" type="checkbox" v-model="SMT">
                                <label for="SMT">SMT</label>
                            </span>
                        </li>
                        <li class="che-box">
                            <span class="cutsom-checkbox-row custom-checkbox-style-row-3">
                                <input id="ADMIN" type="checkbox" v-model="ADMIN">
                                <label for="ADMIN">ADMIN</label>
                            </span>
                        </li>
                        <li class="che-box">
                            <span class="cutsom-checkbox-row custom-checkbox-style-row-3">
                                <input id="BOARD" type="checkbox" v-model="BOARD">
                                <label for="BOARD">BOARD</label>
                            </span>
                        </li>
                        <li class="che-box">
                            <span class="cutsom-checkbox-row custom-checkbox-style-row-3">
                                <input id="ERP" type="checkbox" v-model="ERP">
                                <label for="ERP">ERP</label>
                            </span>
                        </li>
                    </ul>
                    <div class="btn-box">
                        <input type="submit" class="btn btn-primary" value="确定注册" v-on:click="enter_Registered">
                        <input type="reset" class="btn btn-dark" value="重置" v-on:click="reset">
                    </div>
                    <p class="message" v-text="error_message"></p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/vue.js"></script>
    <script src="~/js/registered.js"></script>
</body>
</html>